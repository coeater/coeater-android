<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="306dp"
        android:layout_height="381dp"
        android:layout_marginTop="107dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tv_stage_game_choice"
            android:fontFamily="@font/oswald_bold"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="STAGE 1"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:id="@+id/progressbar_game_choice"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:indeterminateOnly="false"
            android:max="100"
            android:progress="75"
            android:progressDrawable="@drawable/layer_game_progress_bar"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_stage_game_choice" />

        <TextView
            android:id="@+id/tv_left_game_choice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/oswald_regular"
            android:gravity="center"
            android:lineSpacingExtra="-10sp"
            android:singleLine="false"
            android:text="까르보나라 파스타"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/button_left_choice"
            app:layout_constraintEnd_toStartOf="@+id/tv_right_game_choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressbar_game_choice" />


        <TextView
            android:id="@+id/tv_right_game_choice"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/oswald_regular"
            android:gravity="center"
            android:lineSpacingExtra="-10sp"
            android:text="까르보나라 파스타"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/button_right_choice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_left_game_choice"
            app:layout_constraintTop_toBottomOf="@+id/progressbar_game_choice" />
        <TextView
            android:id="@+id/tv_game_versus"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/oswald_bold"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="vs."
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressbar_game_choice" />


        <ImageButton
            android:id="@+id/button_left_choice"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="52dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/button_right_choice"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/button_right_choice"
            android:layout_width="0dp"
            android:layout_height="112dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="52dp"
            android:scaleType="centerCrop"
            android:background="@color/white"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/button_left_choice" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/choice_background"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>