<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_left_background"
        android:layout_width="0dp"
        android:layout_height="207dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="249dp"
        android:background="@drawable/bg_game_button"
        android:padding="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/button_right_background"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_right_background"
        android:layout_width="0dp"
        android:layout_height="207dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/bg_game_button"
        android:padding="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/button_left_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="25"
        android:progressDrawable="@drawable/layer_game_progress_bar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_left_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>