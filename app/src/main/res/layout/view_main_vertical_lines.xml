<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="match_parent">

    <View
        android:id="@+id/view_line_one"
        android:layout_width="2dp"
        android:layout_height="184.5dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintEnd_toStartOf="@+id/view_line_two"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line_two"
        android:layout_width="1dp"
        android:layout_height="158dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintEnd_toStartOf="@+id/view_line_three"
        app:layout_constraintTop_toTopOf="@+id/view_line_three" />

    <View
        android:id="@+id/view_line_three"
        android:layout_width="0.5dp"
        android:layout_height="128dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintEnd_toStartOf="@+id/view_line_four"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line_four"
        android:layout_width="0.5dp"
        android:layout_height="106dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>