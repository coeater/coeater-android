<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/exit_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="13dp"
        android:text="Look for Co-eater"
        android:textSize="36sp"
        android:textColor="@color/salmon"
        android:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:background="@color/salmon">


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/menu"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/iv_menu"
        app:layout_constraintStart_toStartOf="@id/iv_menu"
        android:orientation="vertical">

        <com.coeater.android.main.view.SearchButton
            android:id="@+id/search_button_menu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp" />

        <com.coeater.android.main.view.SearchButton
            android:id="@+id/search_button_mood"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="40dp" />

        <com.coeater.android.main.view.SearchButton
            android:id="@+id/search_button_time"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>