<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/salmon">

    <View
        android:id="@+id/iv_bg1"
        android:layout_width="273.5dp"
        android:layout_height="122.6dp"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/register_bg1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/iv_bg2"
        android:layout_width="273.5dp"
        android:layout_height="122.6dp"
        android:layout_marginHorizontal="43dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/register_bg2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:textSize="50dp"
        android:textColor="#f6f6f6"
        android:gravity="center_horizontal"
        android:text="User\nRegister"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@+id/iv_bg1"
        />

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bg_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="54.5dp"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:textSize="32sp"
        android:textColor="#f6f6f6"
        android:lineSpacingExtra="15sp"
        android:gravity="center_horizontal"
        android:hint="Your Name"
        android:singleLine="true"
            android:textColorHint="@color/white"
        android:background="@drawable/bg_underline_white"
        android:layout_marginHorizontal="110dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="#f6f6f6"
        android:gravity="center_horizontal"
        android:text="Please enter your profile,\nand touch arrow button\nwhen it&apos;s done"
        android:layout_marginBottom="32.2dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg2"
        />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_right_alt_24_px"
        android:layout_marginEnd="2.5dp"
        android:layout_marginBottom="5.2dp"
        app:layout_constraintEnd_toEndOf="@id/iv_bg2"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg2" />

</androidx.constraintlayout.widget.ConstraintLayout>