<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_line_one"
        android:layout_width="51dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintBottom_toTopOf="@+id/view_line_two"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_line_two"
        android:layout_width="91dp"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintBottom_toTopOf="@+id/view_line_three"
        app:layout_constraintStart_toStartOf="parent"
         />

    <View
        android:id="@+id/view_line_three"
        android:layout_width="131dp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_salmon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>