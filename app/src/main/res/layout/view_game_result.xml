<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_game_result_background"
        android:layout_width="290dp"
        android:layout_height="393dp"
        android:layout_marginTop="109dp"
        android:background="@color/salmon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_game_result_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_game_result_background"
        app:layout_constraintEnd_toEndOf="@+id/view_game_result_background"
        app:layout_constraintStart_toStartOf="@+id/view_game_result_background"
        app:layout_constraintTop_toTopOf="@+id/view_game_result_background"
        android:src="@drawable/result_background"
        />


    <TextView
        android:id="@+id/tv_game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/oswald_regular"
        android:gravity="center"
        android:lineSpacingExtra="12sp"
        android:text="You and (User)\nSimilarity"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/view_game_result_background"
        app:layout_constraintStart_toStartOf="@+id/view_game_result_background"
        app:layout_constraintTop_toTopOf="@+id/view_game_result_background" />

    <ProgressBar
        android:id="@+id/pb_game_result"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="9dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="50"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"

        app:layout_constraintEnd_toEndOf="@+id/view_game_result_background"
        app:layout_constraintStart_toStartOf="@+id/view_game_result_background"
        app:layout_constraintTop_toTopOf="@+id/view_game_result_background"
        />

    <TextView
        android:id="@+id/pb_game_result_similarity"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:fontFamily="@font/oswald_regular"
        android:gravity="center"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="12sp"
        android:text="80"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/pb_game_result"
        app:layout_constraintStart_toStartOf="@+id/pb_game_result"
        app:layout_constraintTop_toTopOf="@+id/pb_game_result"
        app:layout_constraintBottom_toBottomOf="@+id/pb_game_result"
        />

    <ImageButton
        android:id="@+id/ib_game_result_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/circle_a67c74"
        android:src="@drawable/game_result_close"
        app:layout_constraintBottom_toBottomOf="@+id/view_game_result_background"
        app:layout_constraintStart_toStartOf="@+id/view_game_result_background" />


    <ImageButton
        android:id="@+id/ib_game_result_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/circle_dusk"
        android:src="@drawable/game_result_share"
        app:layout_constraintBottom_toBottomOf="@+id/view_game_result_background"
        app:layout_constraintEnd_toEndOf="@+id/view_game_result_background" />

</androidx.constraintlayout.widget.ConstraintLayout>