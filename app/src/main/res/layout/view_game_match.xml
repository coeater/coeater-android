<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.92"
        android:background="@drawable/bg_game_match" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_match"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="239dp"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="heart.json" />

    <View
        android:id="@+id/view_not_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.92"
        android:background="@drawable/bg_game_not_match" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_not_match"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_marginTop="239dp"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="close.json" />
</androidx.constraintlayout.widget.ConstraintLayout>